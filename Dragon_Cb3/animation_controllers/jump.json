{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.jump": {
            "states": {
                "default": {
                "transitions": [{
                        "jump": "query.is_jumping &&!query.is_standing"
                    }]
                },
                "jump": {
                    "on_entry": ["/scoreboard players set @s m11 1"],
                    "transitions": [{
                        "default": "1.0"
                    }]
                }
            }
        }
    }
}